<h2>Bookmarks submitted by <%= link_to @user.email, profile_path(@user) %></h2>

<table style="width: 100%">
  <thead>
    <tr>
      <th>Url</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
  <% @bookmarks.each do |bookmark| %>
    <tr>
    <td><%= link_to bookmark.title, bookmark.url %></td>
    <td><%= link_to @user.email, profile_path(@user) %></td>
  </tr>
<% end %>
  </tbody>
</table>

<%= link_to 'Back', profiles_path %>